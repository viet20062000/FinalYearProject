<CinebotRootScreen>
    md_bg_color: gch("#33333d")

    MDBoxLayout:
        orientation: 'vertical'

        NavigationBar:
            id: nav_bar

            NavigationItem:
                text: "HOME"
                icon: "home"
                on_release:
                    scr_manager.transition.direction = "right"
                    scr_manager.current = "HOME"

            NavigationItem:
                text: "BOOKING"
                icon: "ticket"
                on_release:
                    scr_manager.transition.direction = "right" \
                    if scr_manager.current in ["CINEBOT","SETTING"] \
                    else "left"
                    scr_manager.current = "BOOKING"

            NavigationItem:
                text: "CINEBOT"
                icon: "head-cog-outline"
                on_release:
                    scr_manager.transition.direction = "left"\
                    if scr_manager.current in ["BOOKING","HOME"]\
                    else "right" 
                    scr_manager.current = "ASSISTANT"
            NavigationItem:
                text: "SETTING"
                icon: "cog"
                on_release:
                    scr_manager.transition.direction = "left" 
                    scr_manager.current = "SETTING"
            
            
        CinebotManager:
            id: scr_manager

            CinebotOverviewScreen:
                name: "HOME"

            CinebotBookingTicketScreen:
                name: "BOOKING"


            CinebotAssistantScreen:
                name: "ASSISTANT"

            CinebotSettingScreen:
                name:"SETTING"
            CinebotDetailScreen:
                name:"DETAIL"
<CinebotOverviewScreen>
    name:"HOME"
    MDSwiper:
        id: Swiper
        pos_hint: {'center_x': .5,'center_y':.6}
        size_hint_y: None
        height: root.height  


